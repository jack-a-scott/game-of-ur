{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "target": "es2017",
        "declaration": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "types": ["node", "jquery"],
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
      "client/**/*.ts",
      "server/**/*.ts"
    ]
}